<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- (Optional) shows the word being defined -->
    <TextView
        android:id="@+id/dictWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="word"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- Tabs: Definitions | Synonyms | Antonyms -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dictTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false" />

    <!-- Content area that MainActivity fills based on selected tab -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/dictContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loadingâ€¦"
            android:textSize="16sp" />
    </ScrollView>

</LinearLayout>
